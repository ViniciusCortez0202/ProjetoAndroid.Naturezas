<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background3">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cadastro_imagem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="135dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/cadastro_botao_imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/background1"
        android:gravity="center"
        android:text="Imagem"
        android:textColor="@color/cardview_light_background" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastro_nome"
        android:hint="Nome"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastro_email"
        android:hint="E-mail"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cadastro_numero"
        android:hint="NÃºmero"
        />
        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cadastro_senha"
            android:hint="Senha"/>
</LinearLayout>

    <EditText
        android:id="@+id/cadastro_botao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background1"
        android:gravity="center"
        android:text="CADASTRAR"
        android:textColor="@color/cardview_light_background" />

</LinearLayout>
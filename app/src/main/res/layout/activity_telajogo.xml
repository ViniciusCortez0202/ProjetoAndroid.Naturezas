<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.JogoActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/background3">

    <TextView
        android:id="@+id/contarQuestao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/background1"
        android:gravity="center"
        android:text="Questão 1"
        android:textColor="@color/cardview_light_background"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/idImagem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/questao1"
        />

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Responda a opção que melhor corresponde à imagem acima"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Resposta 1"
        android:onClick="checarQuestao"
        android:textColor="@color/cardview_light_background"
        android:background="@mipmap/background1"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Resposta 2"
        android:onClick="checarQuestao"
        android:textColor="@color/cardview_light_background"
        android:background="@mipmap/background1"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Resposta 3"
        android:onClick="checarQuestao"
        android:textColor="@color/cardview_light_background"
        android:background="@mipmap/background1"

        />


    <Button
        android:id="@+id/btn4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Resposta 4"
        android:onClick="checarQuestao"
        android:textColor="@color/cardview_light_background"
        android:background="@mipmap/background1"
        />

</LinearLayout>